{
    "format_version": "1.20.40",
    "animation_controllers": {
        "controller.animation.torch.hold": {
            "states": {
                "default": {
                    "animations": [ "hold_first_person" ],
                    "transitions": [{ "offhand": "query.is_item_equipped(1) && !query.is_item_equipped(0)" }]
                },
                "offhand": {
                    "animations": [ "hold_first_person_offhand" ],
                    "transitions": [{ "default": "query.is_item_equipped(0) && !query.is_item_equipped(1)" }]
                }
            }
        }
    }
}